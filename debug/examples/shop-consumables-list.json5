{
    assetPrefix: "debug-shop", // used for debug screens
    music: "home.backgroundMusic",
    background: {
        items: [{ key: "debug-shop.magicShop", x: 0, y: 0 }],
    },
    styleDefaults: {
        fontFamily: "ReithSerif",
        fontSize: "24px",
        resolution: 2,
        align: "center",
    },
    title: {
        text: "<%= title %>",
        style: {
            fontFamily: "ReithSerif",
            fontStyle: "bold",
            fontSize: "32px",
            color: "#4A381F",
        },
        backgroundKey: "debug-shop-list.titleBackground",
    },
    subtitle: {
        text: "<%= balance %>",
        style: {
            fontFamily: "ReithSerif",
            fontSize: "26px",
        },
        backgroundKey: "debug-shop.balanceBackground",
        icon: {
            key: "debug-shop.balanceIcon",
        },
    },
    listPadding: {
        x: 18.86,
        y: 18.86,
        outerPadFactor: 1,
    },
    listCovers: {
        shop: {
            top: { key: "debug-shop-list.listCoverTop" },
        },
        manage: {
            top: { key: "debug-shop-list.listCoverTop" },
            bottom: { key: "debug-shop-list.listCoverBottom" },
        },
    },
    backgrounds: {
        shop: { key: "background", columns: [20, null, 20], rows: [20, null, 20] },
        manage: { key: "background", columns: [20, null, 20], rows: [20, null, 20] },
    },
    states: { locked: { properties: { alpha: 0.5, tint: 0xaaaaaa }, disabled: true } },
    overlay: {
        items: [
            {
                type: "image",
                name: "itemIcon",
                assetKey: "${icon}", // Key of the corresponding asset.
                position: { alignX: "left", alignY: "center" },
                size: 76,
                inheritProperties: true, // Take the style properties of the parent state, such as transparency for a locked item.
            },
            {
                type: "text",
                name: "itemName",
                value: "${title}",
                position: { alignX: "left", alignY: "center", offsetX: 86, offsetY: -10 },
                styles: { fontSize: "16px", fontStyle: "bold" },
            },
        ],
        options: {
            shop: [
                {
                    type: "text",
                    name: "currencyAmount",
                    value: "${price}",
                    position: { alignX: "right", alignY: "center", offsetX: -30 },
                    styles: { fontSize: "14px" },
                    showWhen: ["available"], // This will only be shown by the game when the button is in this state.
                },
                {
                    type: "image",
                    name: "currency",
                    assetKey: "shop-list.currency",
                    position: { alignX: "right", alignY: "center", offsetX: -60 },
                    showWhen: ["available"],
                },
                {
                    type: "image",
                    name: "lock",
                    assetKey: "shop-list.lockIcon",
                    position: { alignX: "left", alignY: "bottom", offsetX: 40, offsetY: 5 },
                    showWhen: ["locked"],
                },
                {
                    type: "text",
                    name: "unlockHint",
                    value: "${hint}",
                    position: { alignX: "left", alignY: "center", offsetX: 86, offsetY: 10 },
                    styles: { fontSize: "14px" },
                    showWhen: ["locked"],
                },
                {
                    type: "text",
                    name: "purchased",
                    value: "Purchased",
                    position: { alignX: "right", alignY: "center", offsetX: -30 },
                    styles: { fontSize: "16px" },
                    showWhen: ["unavailable"],
                },
                {
                    type: "text",
                    name: "subtitle",
                    value: "${subtitle}",
                    position: { alignX: "left", alignY: "center", offsetX: 86, offsetY: 10 },
                    styles: { fontSize: "12px" },
                    showWhen: ["equippable", "unlocked"],
                },
                {
                    type: "text",
                    name: "itemStockLevel",
                    value: "${qty} in stock",
                    position: { alignX: "left", alignY: "center", offsetX: 86, offsetY: 10 },
                    styles: { fontSize: "12px" },
                    showWhen: ["consumable"],
                },
            ],
            manage: [
                {
                    type: "text",
                    name: "equip",
                    value: "Equip",
                    position: { alignX: "right", alignY: "center", offsetX: -30 },
                    styles: { fontSize: "16px" },
                    showWhen: ["cta", "equippable"],
                },
                {
                    type: "text",
                    name: "subtitle",
                    value: "${subtitle}",
                    position: { alignX: "left", alignY: "center", offsetX: 86, offsetY: 10 },
                    styles: { fontSize: "12px" },
                    showWhen: ["equippable"],
                },
                {
                    type: "text",
                    name: "equipped",
                    value: "Equipped",
                    position: { alignX: "right", alignY: "center", offsetX: -30 },
                    styles: { fontSize: "16px" },
                    showWhen: ["actioned", "equippable"],
                },
                {
                    type: "text",
                    name: "itemStockLevel",
                    value: "${qty} in inventory",
                    position: { alignX: "left", alignY: "center", offsetX: 86, offsetY: 10 },
                    styles: { fontSize: "12px" },
                    showWhen: ["consumable"],
                },
            ],
        },
    },
    emptyList: {
        shop: {
            value: "There is nothing to buy",
            position: { offsetX: 0, offsetY: 0 },
            styles: { fontSize: "24px" },
        },
        manage: {
            value: "You have no consumables",
            position: { offsetX: 0, offsetY: 0 },
            styles: { fontSize: "24px" },
        },
    },
}
