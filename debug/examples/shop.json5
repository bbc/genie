{
    assetPrefix: "shop",    //override generally only used for debug screens. Remove for production screens TODO can we switch the debug shop to use "shop-debug." ?
    music: "home.backgroundMusic",
    background: {
        items: [{ key: "shop.magicShop", x: 0, y: 0 }],
    },
    styleDefaults: {
        fontFamily: "ReithSans",
        fontSize: "24px",
        resolution: 2,
        align: "center",
    },
    menuButtons: {
        styles: { fontStyle: "bold", fontSize: "16px" },
    },
    titles: [
        {
            type: "image",
            key: "titleBackground",
            xOffset: 0,
            yOffset: 0,
        },
        {
            type: "text",
            value: "Shop",
            xOffset: 0,
            yOffset: 0,
            styles: { fontStyle: "bold", fontSize: "24px" },
        },
    ],
    titlePadding: 20,
    balance: {
        background: {
            type: "image",
            key: "balanceBackground",
        },
        icon: {
            type: "image",
            key: "balanceIcon",
        },
        value: {
            type: "text",
            key: "coin", // the id of the currency item, which must exist in the inventory collection
            styles: { fontSize: "16px" },
        },
    },
    balancePadding: 15,
    listPadding: {
        x: 18.86,
        y: 15.09,
        outerPadFactor: 1.8,
    },
    collection: ["debug-inventory", "debug-armoury"],
    paneCollections: {
        shop: "debug-armoury",
        manage: "debug-inventory",
    },
    confirm: {
        detailView: true, // true === smaller image and more text. false === large image only.
        prompt: {
            shop: { legal: "Purchase this item?", illegal: "You can't afford this." },
            manage: { legal: "Do you want to \nequip this item?", illegal: "You've already \nequipped this." },
            styles: { fontStyle: "bold" },
        },
        title: { styles: { fontStyle: "bold" } }, // optionally configure styles on item text
        detail: { styles: { color: "#bd6", fontStyle: "bold" } },
        description: { styles: { fontStyle: "italic", lineSpacing: 5 } },
        // price: { styles: {} },
    },
    menu: {
        buttonsRight: true, // set as false to X-flip the menu layout
    },
    columns: 1,
    backgrounds: {
        // menu: "", // string asset key, blank for no background. Object with columns and row definitions to use ninepatch scaling
        shop: {key: "background", columns: [20, null, 20], rows: [20, null, 20]},
        //menu: {key: "background", columns: [20, null, 20], rows: [20, null, 20]},
        manage: "background",
        confirm: "halfViewBackground",
    },
    assetKeys: {
        scrollbar: "scrollbar",
        scrollbarHandle: "scrollbarHandle",
        itemBackground: "itemBackground",
        buttonBackground: "menuButtonBackground",
        buttonIcon: "menuButtonIcon",
        currency: "currencyIcon",
    },
    overlay: {
        items: [
            {
                type: "image",
                name: "background",
                assetKey: "itemBackground",
                isDynamic: false, // asset key is the value of assetKey
            },
            {
                type: "image",
                name: "itemIcon",
                assetKey: "icon",
                isDynamic: true, // asset key is item[assetKey]
                position: { align: "left", offsetX: 35, offsetY: 0 }, // x offsets are from an edge, y offsets are from the centre
                size: 76,
            },
            {
                type: "text",
                name: "itemName",
                value: "title",
                isDynamic: true,
                position: { align: "left", offsetX: 80, offsetY: -18 },
                styles: { fontSize: "16px", fontStyle: "bold" },
            },
            {
                type: "text",
                name: "itemDescription",
                value: "description",
                isDynamic: true,
                position: { align: "left", offsetX: 80, offsetY: 4 },
                styles: { fontSize: "12px" },
            },
        ],
        options: {
            shop: [
                {
                    type: "text",
                    name: "currencyAmount",
                    value: "price",
                    isDynamic: true,
                    position: { align: "right", offsetX: -44, offsetY: -10 },
                    styles: { fontSize: "14px" },
                    activeStates: ["cta"],
                },
                {
                    type: "image",
                    name: "currency",
                    assetKey: "currency",
                    isDynamic: false,
                    position: { align: "right", offsetX: -64, offsetY: 0 },
                    activeStates: ["cta"],
                },
                {
                    type: "text",
                    name: "owned",
                    value: "Purchased",
                    isDynamic: false,
                    position: { align: "right", offsetX: -120, offsetY: -10 },
                    styles: { fontSize: "16px", align: "right" },
                    activeStates: ["actioned"],
                },
            ],
            manage: [
                {
                    type: "text",
                    name: "equip",
                    value: "Equip",
                    isDynamic: false,
                    position: { align: "right", offsetX: -76, offsetY: -10 },
                    styles: { fontSize: "16px", align: "right" },
                    activeStates: ["cta"],
                },
                {
                    type: "text",
                    name: "equipped",
                    value: "Equipped",
                    isDynamic: false,
                    position: { align: "right", offsetX: -96, offsetY: -10 },
                    styles: { fontSize: "16px", align: "right" },
                    activeStates: ["actioned"],
                },
            ],
        },
    },
    eventChannel: "shop_menu",
}
