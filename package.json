{
    "name": "genie",
    "version": "3.12.0",
    "description": "BBC Games Genie - A Modular Game Engine",
    "license": "Apache-2.0",
    "private": true,
    "author": "BBC",
    "repository": {
        "type": "git",
        "url": "https://github.com/bbc/genie"
    },
    "dependencies": {
        "@babel/core": "^7.16.0",
        "@babel/plugin-proposal-class-properties": "^7.16.0",
        "@babel/plugin-proposal-private-methods": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "ajv": "^6.12.6",
        "@babel/eslint-parser": "^7.16.0",
        "babel-jest": "^27.3.1",
        "babel-loader": "^8.2.3",
        "babel-plugin-module-resolver": "^4.1.0",
        "bowser": "2.11.0",
        "core-js": "^3.19.1",
        "event-target-polyfill": "0.0.2",
        "expose-loader": "^3.1.0",
        "json5": "^2.2.0",
        "notp": "^2.0.3",
        "phaser": "npm:phaser-bbc-childrens-apps@3.56.3",
        "webfontloader": "^1.6.28"
    },
    "devDependencies": {
        "cross-env": "^7.0.2",
        "cypress": "^7.5.0",
        "cypress-plugin-tab": "^1.0.5",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^25.2.2",
        "eslint-plugin-local-rules": "^1.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-standard": "^5.0.0",
        "games-stat-helper": "github:bbc/games-automation-stathelper.git",
        "jest": "^27.3.1",
        "jest-canvas-mock": "^2.3.1",
        "jsdom": "^16.4.0",
        "local-web-server": "^4.2.1",
        "minimist": "^1.2.5",
        "mochawesome": "^7.0.0",
        "mochawesome-merge": "^4.2.0",
        "mochawesome-report-generator": "^6.0.0",
        "prettier": "2.3.2",
        "rollup": "^2.35.1",
        "rollup-plugin-terser": "^7.0.2",
        "webpack": "^5.61.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.4.0",
        "@webpack-cli/serve": "^1.6.0"
    },
    "scripts": {
        "start": "cross-env genieCore=true ws --config-file dev/scripts/web-config.js",
        "start:pack": "webpack-cli serve --config build-scripts/webpack.config.js --env genieCore",
        "build": "webpack --config build-scripts/webpack.config.js --env genieCore",
        "build:theme2": "bash build-scripts/theme2creator/create.sh",
        "clean": "rm -rf .cache",
        "test": "npm run jest && npm run eslint",
        "eslint": "eslint . --ignore-pattern lib/ --ignore-path .gitignore",
        "jest": "jest --coverage",
        "jest:no-coverage": "jest",
        "validate": "node build-scripts/schemavalidator/validator.js achievement",
        "roll-lodash": "rollup -c lib/lodash/rollup.config.js",
        "cy:terminal": "cypress open --env THEME=theme_1",
        "cy:terminal:local": "cypress open --env THEME=theme_1,LOCAL_DEV=true",
        "cy:headless": "cypress run --headless --config video=false --env THEME=theme_1 --spec '**/*spec.js'",
        "cy:headless-theme2": "cypress run --headless --config video=false --env THEME=theme_2 --spec '**/*spec.js'",
        "cy:local": "cypress run --headless --config video=false --env THEME=theme_1,LOCAL_DEV=true --spec '**/integration/*spec.js'",
        "cy:local-theme2": "cypress run --headless --config video=false --env THEME=theme_2,LOCAL_DEV=true --spec '**/integration/*spec.js'"
    }
}
