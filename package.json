{
    "name": "genie",
    "version": "1.0.1",
    "description": "Genie Modular Game Engine",
    "license": "Apache-2.0",
    "private": true,
    "author": "BBC",
    "repository": {
        "type": "git",
        "url": "https://github.com/bbc/childrens-games-genie"
    },
    "dependencies": {
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-preset-env": "^1.6.1",
        "babel-polyfill": "^6.26.0",
        "expose-loader": "^0.7.5",
        "phaser-ce": "2.11.0",
        "webfontloader": "^1.6.28"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^5.4.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-local-rules": "^0.1.0",
        "eslint-plugin-mocha": "5.0.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.0.1",
        "hard-source-webpack-plugin": "^0.6.4",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jsdoc": "^3.5.5",
        "karma": "^2.0.5",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.2",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-remap-coverage": "^0.1.5",
        "karma-sinon": "^1.0.5",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^3.0.0",
        "live-server": "^1.2.0",
        "local-web-server": "^2.6.0",
        "mocha": "^4.1.0",
        "prettier": "^1.11.1",
        "sinon": "^6.0.1",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5",
        "webpack-visualizer-plugin": "^0.1.11"
    },
    "scripts": {
        "start": "ws --config-file dev/scripts/web-config.js",
        "watch": "live-server --no-browser --entry-file=dev/index.dev.html --watch=./src --middleware=$PWD/dev/scripts/rewrite.js",
        "start:qa": "webpack-dev-server --config build-scripts/webpack.config.js --env.genieCore",
        "build": "webpack --config build-scripts/webpack.config.js --env.genieCore",
        "build-watch": "webpack --config build-scripts/webpack.config.js --watch --env.genieCore",
        "eslint": "eslint . --ignore-pattern lodash --ignore-path .gitignore",
        "test": "karma start test/karma.conf.js && npm run eslint",
        "test:coverage": "NODE_OPTIONS=--max_old_space_size=4096 karma start test/karma.conf.js --coverage && npm run eslint",
        "test-watch": "karma start test/karma.conf.js --no-single-run --auto-watch",
        "test-watch:coverage": "NODE_OPTIONS=--max_old_space_size=4096 karma start test/karma.conf.js --no-single-run --auto-watch --coverage",
        "docs": "open ./docs/api/index.html",
        "gendocs": "jsdoc -c ./build-scripts/docs/.jsdoc.js"
    }
}
